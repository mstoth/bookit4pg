<!DOCTYPE html>
<html>
<head>
  <title>Bookit4pg</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag "vba" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "vba" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="heading">
	<div id="leftside">
		
				<%=link_to "Home", :home %>
				
				<% if !current_user.nil? %>
	  				<%=link_to "Logout", :logout  %>
				<% else %> 
	  				<%=link_to "Login", :login  %>
				<% end %>
				
				<% if !current_user.nil? && (current_user.login == "mstoth") %>
	  				<%= link_to "Admin", "/admins/index" %>
				<% else %>
	
				<% end %>
	<% if Group.all.length > 0 %>
	<% g=Group.where(:picture_file_name=>nil) %>
	<% group_array = Group.all - g %>
	<% sel = rand(group_array.length) %>
	<% group = group_array[sel] %>
	
	<%= image_tag group.picture.url(:medium) %>
	<br/>
	<div id="caption">
	<%= link_to group.title, group %><br/><br/>
	<% end %>
	
	</div>
	
	<br/><br/>
	
	<div id="social">
		
	<div class="fb-like", data-href="http://virtualbookingagent.com" data-send="true" data-layout="button_count" data-width="50" data-show-faces="true" data-font="lucida grande" ></div>
	
	<script src="http://platform.linkedin.com/in.js" type="text/javascript"></script>
	<script type="IN/Share" data-url="http://virtualbookingagent.com" data-counter="right"></script>
	
	
	
	<a href="https://twitter.com/share" class="twitter-share-button" data-url="http://virtualbookingagent.com" data-text="Free tool for performers and venues.  Take a look." data-via="virtualpianist">Tweet</a>
	
	<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
	
	
	</div>
	
	</div>
	
	<div id="fb-root"></div>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=143085459093289";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>
	
		
	
	<div id="centertext">
	<% if current_user.nil? %>
	Virtual Booking Agent 
	<% else %>
	Virtual Booking Agent - Logged in as <%=current_user.login%>
	<% end %>
	<div id="social">
		
	</div>
	</div>
	
	
	<div id="rightside">
	<%= link_to "About", :about %>
	<%= link_to "Help ", :help %>
	<%= link_to "Forum", "http://virtualpianist.com/simplemachinesforum/index.php?board=5.0" %>
		
	<% if Venue.all.length > 0 %>
	<% v=Venue.where(:vpic_file_name=>nil) %>
	<% venue_array = Venue.all - v %>
	<% sel = rand(venue_array.length) %>
	<% venue = venue_array[sel] %>
	
	<% if !venue.vpic_file_name.nil? %>
<%= image_tag venue.vpic.url(:medium) %>
<br/>
<div id="caption">
<%= link_to venue.name, venue %>
</div>

<% end %>
<% end %>
	</div>
	</div>

<%= yield %>

<div id="bottom">
	
</div>
</body>
</html>
