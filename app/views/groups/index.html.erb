<div class="form_heading"><br/><br/>Your groups</div>

<table class="center">
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @groups.each do |group| %>
  <tr>
    <td><%= group.title %></td>
    <td><%= link_to 'Show', group %></td>
    <td><%= link_to 'Edit', edit_group_path(group) %></td>
    <td><%= link_to 'Leave', "/users/leave_group/#{group.id}", :confirm => 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

<br />
<div id="footerlinks">
<%= link_to 'New Group', new_group_path %>
</div>

<% if @groups.count == 0 %>
<div id="notes">
You can have more than one group. 
</div>
<% end %>